{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "string",
      "required": true
    },
    "created_at": {
      "type": "date",
      "required": true,
      "default": "$now"
    },
    "updated_at": {
      "type": "date",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "Owner",
      "foreignKey": "owner_id"
    }
  },
  "acls": [],
  "methods": {}
}
